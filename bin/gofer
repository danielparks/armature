#!/usr/bin/env ruby

require 'gli'
require 'gofer'
require 'logging'

include GLI::App

program_desc 'deploy Puppet environments and manage modules'
version Gofer::VERSION

@logger = Logging.logger['gofer']
Logging.logger.root.level = :warn

subcommand_option_handling :normal
arguments :strict

desc 'Show INFO level output'
switch [:v,:verbose]

desc 'Show DEBUG level output'
switch [:d,:debug]

desc 'Path to gofer cache'
default_value '~/.gofer/cache'
arg_name 'DIR'
flag [:C,:cache]

desc 'Deploy a repo into environments based on branches'
arg 'GIT_URL'
arg 'branch', :optional=>true, :multiple=>true
command :deploy do |c|
  c.desc 'Path to the code directory'
  c.default_value '/opt/puppetlabs/puppet...'
  c.flag [:c,:code]

  c.action do |global_options, options, arguments|
    if arguments.empty?
      raise "Not enough arguments specified (should have been caught by GLI)"
    end

    cache = Gofer::Cache.new(global_options[:cache])
    url = arguments.shift
    if arguments.empty?
      arguments = ['master']
    end

    @logger.debug "Using code directory '#{options[:code]}'"

    repo = cache.get_repo(url)
    environments = Gofer::Environments.new(options[:code], cache)
    arguments.each do |ref|
      environments.checkout_ref(repo, ref)
    end
  end
end

desc 'Remove unused objects from cache'
command :gc do |c|
  c.desc 'Path to the code directory'
  c.default_value '/opt/puppetlabs/puppet...'
  c.flag [:c,:code]

  c.action do |global_options, options, arguments|
    if ! arguments.empty?
      raise "Arguments may not be specified"
    end

    cache = Gofer::Cache.new(global_options[:cache])
    cache.garbage_collect(options[:code])
  end
end

desc 'Update branches to latest revisions'
command :update do |c|
  c.action do |global_options, options, arguments|
    if ! arguments.empty?
      raise "Arguments may not be specified"
    end

    cache = Gofer::Cache.new(global_options[:cache])
    cache.update_branches()
  end
end

pre do |global_options, command, options, arguments|
  Logging.logger.root.add_appenders Logging.appenders.stdout

  Logging.logger.root.level = :info if global_options[:verbose]
  Logging.logger.root.level = :debug if global_options[:debug]

  # Don't log all the git commands
  Logging.logger["Gofer::Run"].level = :info if global_options[:debug]

  @logger.debug "Using cache directory '#{global_options[:cache]}'"

  true
end

post do |global,command,options,args|
  # Post logic here
  # Use skips_post before a command to skip this
  # block on that command only
end

on_error do |exception|
  # Error logic here
  # return false to skip default error handling
  true
end

exit run(ARGV)
